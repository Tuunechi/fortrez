generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider     = "mongodb"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

model Project {
  id            String        @id @default(auto()) @map("_id") @db.ObjectId
  title         String        @unique
  description   String
  image         String
  problem       String
  solutions     String[]
  transactions  Transaction[]
  donors        Int?
  funded        Int?
  veifiedFunded Int?
  target        Int
  completed     Boolean
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Transaction {
  id        String   @id @map("_id") @db.ObjectId
  userId    String?
  donor     String
  comment   String?
  amount    Int
  currency  String
  verified  Boolean
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  project   Project  @relation(fields: [projectId], references: [id])
  projectId String   @db.ObjectId
}
